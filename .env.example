# Cloudflare R2 Configuration (S3-compatible)
MINIO_ROOT_USER=your-r2-access-key-id
MINIO_ROOT_PASSWORD=your-r2-secret-access-key
MINIO_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
MINIO_BUCKET=retrosync
AWS_REGION=auto

# Backend Configuration
DATABASE_URL="postgresql://user:password@host/dbname?sslmode=require"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXT_PUBLIC_API_URL=http://localhost:3000

# Development (set to 'production' for Vercel)
NODE_ENV=development

# muOS Deployment Configuration (local dev only, not needed for Vercel)
MUOS_IP=10.0.0.79
MUOS_PORT=2022
MUOS_USER=root
MUOS_PASS=muos
MUOS_PATH1=/SD2 (sdcard)/ports
MUOS_PATH2=/SD2 (sdcard)/Roms/PORTS
